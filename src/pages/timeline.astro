---
import BaseLayout from "../layouts/BaseLayout.astro";

const music = [
  { year: "1998", title: "Started music production", detail: "Early experimentation with Rebirth, FL Studio, Sonar, Ableton. Later settled on Cubase." },
  { year: "2005", title: "Began sharing full live sets", detail: "Live performance becomes a core focus." },

  { year: "2010", title: "Roleplayers (full-length album)", detail: "LAB - first full-length album release." },
  { year: "2011", title: "Laboratorium (compiled VA)", detail: "Various Artists compilation curated and compiled by LAB." },
  { year: "2012", title: "Clean Air Turbulence (EP)", detail: "EP release milestone." },
  { year: "2012–2020", title: "24 CD releases as LAB", detail: "Sustained output across multiple labels." },

  { year: "2017", title: "Major European festival run", detail: "Freqs of Nature (GER), Masters of Puppets (CZ), Hadra Festival (FR), Modem Festival (CRO)." },
  { year: "2018", title: "Ozora Festival (HUN)", detail: "Performance at one of the largest psychedelic festivals worldwide." },
  { year: "2019", title: "Karacus Marakus (IND)", detail: "International performance milestone in India." },

  { year: "2026", title: "Upcoming releases", detail: "9 new releases planned across different projects." },
];

const tech = [
  { year: "2013–now", title: "Teaching music production", detail: "Mentorship-focused teaching, workshops, and long-term artist development." },
  { year: "2015–2019", title: "Workshops in Goa, India", detail: "International teaching and mentorship experience." },

  { year: "2015–now", title: "Image editing & post-production", detail: "Photoshop training and advanced practice in restoration, compositing, AI cleanup/upscale, and promotional visuals." },
  { year: "2020–now", title: "Video editing", detail: "Editing for promo, events, and multimedia contexts." },

  { year: "2021", title: "Sound & AV work begins", detail: "Live sound, audiovisual systems, and technical operations." },
  { year: "2022–now", title: "Congress and large-scale event work", detail: "Started at Pavilhão do Conhecimento (PT), followed by major events in Denmark, France, Spain, and Germany." },

  { year: "2024", title: "Sound Technician certification", detail: "Completed Sound Technician course at Soundbooking Portugal." },
  { year: "Now", title: "Teaching in Porto", detail: "Currently teaching music production at Ponto Frequência." },
];


---

<BaseLayout title="Timeline">
  <section class="section">
    <h1>Timeline</h1>
    <p class="subtitle">
      Two parallel tracks - music and technical/visual work - evolving side by side since 1998.
    </p>
  </section>

  <section class="section timeline">
    <div class="timeline-grid">
      <div class="timeline-col">
        <h2 class="timeline-title">Music</h2>

        <ol class="timeline-list">
          {music.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>

      <div class="timeline-col">
        <h2 class="timeline-title">Technical / Visual</h2>

        <ol class="timeline-list">
          {tech.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>
    </div>
  </section>

  <section class="section">
    <p class="muted">
      Note - this timeline is intentionally high-level. It highlights key milestones rather than listing every release or event.
    </p>
  </section>
</BaseLayout>
