---
import BaseLayout from "../layouts/BaseLayout.astro";

const music = [
  { year: "1998", title: "Started music production", detail: "Early experimentation with Rebirth, FL Studio, Sonar, Ableton. Later settled on Cubase." },
  { year: "2005", title: "Began sharing full live sets", detail: "Live performance focus begins." },

  { year: "2010", title: "Roleplayers (full-length album)", detail: "LAB - first full-length album release." },
  { year: "2011", title: "Laboratorium (compiled VA)", detail: "Various Artists compilation curated/compiled by LAB." },
  { year: "2012", title: "Clean Air Turbulence (EP)", detail: "EP release milestone for LAB." },
  { year: "2012-2020", title: "24 CD releases as LAB", detail: "Sustained output across multiple labels and releases." },

  { year: "2017", title: "Major festival run (EU)", detail: "Freqs of Nature (GER), Masters of Puppets (CZ), Hadra (FR), Modem (CRO)." },
  { year: "2018", title: "Ozora Festival (HUN)", detail: "Main-stage presence at one of the biggest psychedelic festivals." },
  { year: "2019", title: "Karacus Marakus (IND)", detail: "International performance milestone in India." },

  { year: "2026", title: "Upcoming releases", detail: "9 new releases planned/upcoming." },
];

const tech = [
  { year: "2013-now", title: "Teaching music production", detail: "Mentorship-focused teaching, workshops, and ongoing instruction." },
  { year: "2015-2019", title: "Workshops in Goa, India", detail: "International teaching and mentorship experience." },

  { year: "2015", title: "Image editing and post-production", detail: "Photoshop training + advanced practice in restoration, compositing, AI cleanup/upscale, and promo work." },
  { year: "2020", title: "Video editing work", detail: "Editing for promo, events, and multimedia contexts." },

  { year: "2022", title: "Congress and event technical work begins", detail: "Started with smaller events at Pavilhão do Conhecimento (PT)." },
  { year: "2022-now", title: "Major international congress work", detail: "Tech host / technical operations in Denmark, France, Spain, and Germany." },

  { year: "2024", title: "Sound Technician course", detail: "Completed Sound Technician training at Soundbooking Portugal." },

  { year: "Now", title: "Teaching in Porto", detail: "Currently teaching music production at Ponto Frequência." },
];

---

<BaseLayout title="Timeline">
  <section class="section">
    <h1>Timeline</h1>
    <p class="subtitle">
      Two parallel tracks - music and technical/visual work - evolving side by side since 1998.
    </p>
  </section>

  <section class="section timeline">
    <div class="timeline-grid">
      <div class="timeline-col">
        <h2 class="timeline-title">Music</h2>

        <ol class="timeline-list">
          {music.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>

      <div class="timeline-col">
        <h2 class="timeline-title">Technical / Visual</h2>

        <ol class="timeline-list">
          {tech.map((item) => (
            <li class="timeline-item">
              <div class="timeline-year">{item.year}</div>
              <div class="timeline-body">
                <div class="timeline-heading">{item.title}</div>
                <div class="timeline-detail">{item.detail}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>
    </div>
  </section>

  <section class="section">
    <p class="muted">
      Note - this timeline is intentionally high-level. It highlights key milestones rather than listing every release or event.
    </p>
  </section>
</BaseLayout>
