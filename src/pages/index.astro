---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Renato Moreira">
  <section class="hero">
    <div>
      <h1>Renato Moreira</h1>
      <div class="subtitle">
        Music Producer · Live Performer · Sound & AV Specialist
      </div>
      <div class="meta">
        Lisbon-born, Porto-based
      </div>

      <p style="margin-top:18px">
        Multidisciplinary artist and technical operator active since 1998 across electronic music,
        live performance, sound engineering and audiovisual systems.
      </p>
    </div>

    <div class="hero-image">
      <img src="/renato-portrait-v2.webp" alt="Renato Moreira portrait" />
    </div>
    
  </section>

  <section class="section grid grid-2">
    <a class="card" href="/music">
      <h2>Music Hub</h2>
      <p>LAB · Bosmer · Unikorp · Kid Reaktion</p>
    </a>
  
    <a class="card" href="/technical-av">
      <h2>Technical & AV</h2>
      <p>Sound · AV · Animation · Video · Events</p>
    </a>
  
    <a class="card card-wide" href="/teaching">
      <h2>Teaching & Mentorship</h2>
      <p>1-on-1 artist development · Workshops · Institutional teaching</p>
    </a>
  </section>
  

  <section class="section">
    <h2>Timeline</h2>
    <p>Active since 1998 across music, sound and audiovisual systems.</p>
    <a href="/timeline">View full timeline →</a>
  </section>

</BaseLayout>
